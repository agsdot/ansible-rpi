# {{ ansible_managed }}

daemon=true
continue=true

split=24
check-integrity=true

max-concurrent-downloads=3
max-connection-per-server=8
max-file-not-found=3
max-tries=5

retry-wait=60

dir={{ ds_downloads_directory }}

enable-rpc=true
rpc-allow-origin-all=true
rpc-listen-all=true
rpc-listen-port={{ aria2_rpc_port }}
rpc-secret={{ aria2_rpc_token }}

{% if aria2_rpc_encrypted %}
rpc-secure=true
rpc-certificate={{ aria2_cert_path }}
rpc-private-key={{ aria2_private_key_path }}
{% endif %}
