split=24
continue=true
check-integrity=true
max-concurrent-downloads=50
max-connection-per-server=8
max-file-not-found=3
max-tries=5
retry-wait=60

dir={{ ds_downloads_directory }}

daemon={{ aria2_as_daemon }}

enable-rpc={{ aria2_rpc_enabled }}
rpc-listen-all={{ aria2_rpc_enabled }}
rpc-user={{ aria2_rpc_user_name }}
rpc-listen-port={{ aria2_rpc_port }}
rpc-secret={{ aria2_rpc_token }}
rpc-secure=true
